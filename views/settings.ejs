<!-- Progress Bar -->
<div class="container">
	<div class="row">
		<h2 class="text-center">Participation Progress!<br/><small>17 of 20 participants have filled out their profile</small></h2>
	</div>
    <div class="row">
		<div class="col-md-offset-4 col-md-4">
			<div class="progress">

			<div class="progress progress-striped active" style="background: #ff9494">
				<div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%;" title="Participation"></div>				
					<span class="progress-type">Participation</span>
				</div>
			</div>

			<div class="progress-meter">
				<div class="meter meter-left" style="width: 45%;"><span class="meter-text">Few</span></div>
				<div class="meter meter-left" style="width: 0%;"><span class="meter-text">Good</span></div>
				<div class="meter meter-right" style="width: 25%;"><span class="meter-text">FULL!</span></div>
    		<div class="meter meter-right" style="width: 10%;"><span class="meter-text">Better</span></div>
			</div>
		</div>
	</div>
</div>
<br/><br/><br/>


<!-- Total Participants -->
<div class="container">
	<div class="row">

		<h2><small>How many participants will there be in total?</small></h2>
    <div class="row form-group">
        <div class="input-group">
            <input type="text" class="form-control" name="totalParticipants">
            <span class="input-group-addon success"><span class="glyphicon glyphicon-ok"></span></span>
        </div>
    </div>
		<h2><small>What is the spending limit of this gift exchange?</small></h2>
    <div class="row form-group">
        <div class="input-group">
            <input type="text" class="form-control" name="spendingLimit">
            <span class="input-group-addon warning"><span class="glyphicon glyphicon-warning-sign"></span></span>
        </div>
    </div>

<!-- Link to Profile -->
		<form action="editProfile">
			<input type="submit" class="btn btn-success btn-lg btn3d" value="Fill out your Own Profile!">
		</form>
	</div>
</div>








