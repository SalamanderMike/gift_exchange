<div class="container">
<!-- Link to Profile -->
<!-- Buttons within Tab container-->
<table>
	<form action="/settings">
		<input type="submit" class="btn btn-primary btn-sm btn3d" value="Admin Settings">
	</form>
<!-- This button needs to change its action -->
	<form action="/home">
		<input type="submit" class="btn btn-success btn-sm btn3d" value="Your Giftee's Profile Summary">
	</form>
	<form action="editProfile">
		<input type="submit" class="btn btn-danger btn-sm btn3d" value="Edit Your Profile">
	</form>
</table>
<!-- Tab Display -->
  <div class="row">
    <div class="col-lg-11 col-lg-11 col-lg-11 col-xs-11 bhoechie-tab-container">
      <div class="col-sm-3 col-md-3 col-sm-3 col-md-3 bhoechie-tab-menu">
        <div class="list-group">
          <a href="#" class="list-group-item active text-center">
            <h4 class="glyphicon glyphicon-glass"></h4><br/>Cuisine
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="glyphicon glyphicon-film"></h4><br/>Hobbies
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="glyphicon glyphicon-credit-card"></h4><br/>Stores
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="glyphicon glyphicon-book"></h4><br/>Books
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="glyphicon glyphicon-tags"></h4><br/>Clothes
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="glyphicon glyphicon-picture"></h4><br/>Art
          </a>
          <a href="#" class="list-group-item text-center">
            <h4 class="glyphicon glyphicon-gift"></h4><br/>Shopping Suggestions
          </a>
          
        </div>
      </div>
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 bhoechie-tab">
          <!-- Cuisine section -->
          <div class="bhoechie-tab-content active">
              <center>
                <h1 class="glyphicon glyphicon-glass" style="font-size:14em;color:#f0ad4e"></h1>
                <h2 style="margin-top: 0;color:#55518a">My Favorite Cuisine</h2>
                <ul style="list-style-type: none;">
                  <% cuisine.forEach(function (item, index){ %>
                    <form action="/search">
                      <input type="submit"  name="item[<%=index%>]" value="<%= item %>">
                      <!-- <input type="hidden" name="locationsearch" value="94115"> -->
                    </form>
                    <br/>
                  <% }) %>
                </ul>



              </center>
          </div>
          <!-- Hobbies section -->
          <div class="bhoechie-tab-content">
              <center>
                <h1 class="glyphicon glyphicon-film" style="font-size:12em;color:#545454"></h1>
                <h2 style="margin-top: 0;color:#55518a">My Favorite Hobbies</h2>
                <ul style="list-style-type: none;">
                  <% hobbies.forEach(function (item){ %>
                    <form action="/search" method="post">
                      <input type="submit" name="item" value="<%= item %>">
                    </form>
                    <br/>
                  <% }) %>
              </center>
          </div>
          <!-- Stores search -->
          <div class="bhoechie-tab-content">
              <center>
                <h1 class="glyphicon glyphicon-credit-card" style="font-size:12em;color:#241c82"></h1>
                <h2 style="margin-top: 0;color:#55518a">My Favorite Stores</h2>
                <ul style="list-style-type: none;">
                  <% stores.forEach(function (item){ %>
                    <form action="/search" method="post">
                      <input type="submit" name="item" value="<%= item %>">
                    </form>
                    <br/>
                  <% }) %>
              </center>
          </div>
          <!-- Books search -->
          <div class="bhoechie-tab-content">
              <center>
                <h1 class="glyphicon glyphicon-book" style="font-size:12em;color:#543407"></h1>
                <h2 style="margin-top: 0;color:#55518a">My Favorite Genres of Books </h2>
                <ul style="list-style-type: none;">
                  <% books.forEach(function (item){ %>
                    <form action="/search" method="post">
                      <input type="submit" name="item" value="<%= item %>">
                    </form>
                    <br/>
                  <% }) %>
              </center>
          </div>
          <!-- Clothes search -->
          <div class="bhoechie-tab-content">
              <center>
                <h1 class="glyphicon glyphicon-tags" style="font-size:12em;color:#7f221f"></h1>
                <h2 style="margin-top: 0;color:#55518a">Clothes I Like to Receive as Gifts</h2>
                <ul style="list-style-type: none;">
                  <% clothes.forEach(function (item){ %>
                    <form action="/search" method="post">
                      <input type="submit" name="item" value="<%= item %>">
                    </form>
                    <br/>
                  <% }) %>
              </center>
          </div>
          <!-- Art search -->
          <div class="bhoechie-tab-content">
              <center>
                <h1 class="glyphicon glyphicon-picture" style="font-size:12em;color:#0b512d"></h1>
                <h2 style="margin-top: 0;color:#55518a">My Favorite Forms of Art</h2>
                <ul style="list-style-type: none;">
                  <% art.forEach(function (item){ %>
                    <form action="/search" method="post">
                      <input type="submit" name="item" value="<%= item %>">
                    </form>
                    <br/>
                  <% }) %>
              </center>
          </div>
          <!-- Shopping Suggestions -->
          <div class="bhoechie-tab-content">
              <center>
                <h1 class="glyphicon glyphicon-gift" style="font-size:12em;color:#b61cca"></h1>
                <h2 style="margin-top: 0;color:#55518a">Choose a store</h2>
                <h3 style="margin-top: 0;color:#55518a">and I'll suggest some items at random</h3>
                <h3 style="margin-top: 0;color:#55518a">based on your gift receiver's taste</h3>
                <ul style="list-style-type: none;">
              </center>
          </div>
      </div>
    </div>
  </div>
</div>





















<script>
$(document).ready(function() {
    $("div.bhoechie-tab-menu>div.list-group>a").click(function(e) {
        e.preventDefault();
        $(this).siblings('a.active').removeClass("active");
        $(this).addClass("active");
        var index = $(this).index();
        $("div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
        $("div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
    });
});
</script>

